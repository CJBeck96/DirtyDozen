#include <Adafruit_GFX.h>
#include <Adafruit_LEDBackpack.h>

// Create HT16K33 matrix object
Adafruit_8x8matrix matrix = Adafruit_8x8matrix();

// Transposed circle bitmap based on lower-left origin and upward column mapping
const uint8_t circleBitmap[] = {
    0b00011000, // Column 0
    0b00100100, // Column 1
    0b01000010, // Column 2
    0b10000001, // Column 3
    0b10000001, // Column 4
    0b01000010, // Column 5
    0b00100100, // Column 6
    0b00011000  // Column 7
};

void setup() {
    // Initialize the LED matrix
    matrix.begin(0x70); // Default I2C address
    matrix.clear();
    matrix.writeDisplay();
}

void loop() {
    // Test the corrected circle shape
    matrix.clear();
    matrix.drawBitmap(0, 0, circleBitmap, 8, 8, LED_ON);
    matrix.writeDisplay();
    delay(5000); // Display the circle for 5 seconds
}
